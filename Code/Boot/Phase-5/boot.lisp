(cl:in-package #:sicl-boot-phase-5)

(defun boot (boot)
  (format *trace-output* "Start of phase 5~%")
  (with-accessors ((e3 sicl-boot:e3)
                   (e4 sicl-boot:e4)
                   (e5 sicl-boot:e5)
                   (e6 sicl-boot:e6))
      boot
    (change-class e5 'environment)
    (import-from-host boot)
    (sicl-boot:enable-class-finalization e3 e4)
    (sicl-boot:finalize-all-classes e4)
    (sicl-boot:enable-defmethod e4 e5)
    (sicl-boot:enable-allocate-instance e4)
    (sicl-boot:define-class-of e5)
    (sicl-boot:enable-object-initialization e4 e5)
    (load-source "Conditionals/macros.lisp" e4)
    (sicl-boot:enable-method-combinations e4 e5)
    (define-compile e4 e5)
    (sicl-boot:enable-generic-function-invocation e4 e5)
    (load-source "CLOS/standard-instance-access.lisp" e5)
    (sicl-boot:enable-defgeneric e4 e5 e6)
    (load-source "CLOS/invalidate-discriminating-function.lisp" e5)
    (sicl-boot:enable-generic-function-initialization e5)
    (sicl-boot:load-accessor-defgenerics e6)
    (sicl-boot:enable-class-initialization e4 e5 e6)
    (sicl-boot:create-mop-classes e5)
    (load-source "CLOS/satiation.lisp" e5)))
