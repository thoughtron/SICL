(cl:in-package #:sicl-boot-phase-6)

(defun boot (boot)
  (format *trace-output* "Start of phase 6~%")
  (with-accessors ((e4 sicl-boot:e4)
                   (e5 sicl-boot:e5)
                   (e6 sicl-boot:e6)
                   (e7 sicl-boot:e7))
      boot
    (change-class e6 'environment)
    (import-from-host boot)
    (sicl-boot:enable-class-finalization e4 e5)
    (sicl-boot:finalize-all-classes e5)
    (sicl-boot:enable-defmethod e5 e6)
    (sicl-boot:enable-allocate-instance e5)
    (sicl-boot:define-class-of e6)
    (sicl-boot:enable-object-initialization e5 e6)
    (load-source "Conditionals/macros.lisp" e5)
    (sicl-boot:enable-method-combinations e5 e6)
    (define-compile e5 e6)
    (sicl-boot:enable-generic-function-invocation e5 e6)
    (sicl-boot:enable-defgeneric e5 e6 e7)
    (load-source "CLOS/invalidate-discriminating-function.lisp" e6)
    (sicl-boot:enable-generic-function-initialization e6)
    (sicl-boot:load-accessor-defgenerics e7)
    (sicl-boot:enable-class-initialization e5 e6 e7)
    (sicl-boot:create-mop-classes e6)
    (load-source "CLOS/satiation.lisp" e6)))
